* {
    background-color:           #282421;
    border-color:               #31322f;
    text-color:                 #bbc2cf;
    font:                       "Inconsolata 13";
    prompt-font:                "Ubuntu Bold 12";
    prompt-background:          #d25710;
    prompt-foreground:          #cccccc;
    prompt-padding:             10px;
    selected-normal-background: #282421;
    selected-normal-foreground: #d54010;
}

/*window {
